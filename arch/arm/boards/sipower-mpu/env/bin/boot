#!/bin/sh

. /env/config

#imx_iim0.permanent_write_enable=1
#mw -b -d /dev/imx_iim_bank0 0x04 0x09
#mw -b -d /dev/imx_iim_bank0 0x05 0x6e
#memcpy -b -s /dev/at25x0 -d /dev/imx_iim_bank0 0xfa 0x1a 6
#imx_iim0.permanent_write_enable=0

#echo
#echo -n "Erase flash..."
#erase /dev/m25p0

#echo
#echo -n "Flashing m25p0..."
#memcpy -d /dev/m25p0 0x80800000 0 8M

#echo
#echo -n "Reset..."
#reset

if [ x$1 = xnand ]; then
	root=nand
	kernel=nand
fi

if [ x$1 = xnet ]; then
	root=net
	kernel=net
fi

if [ x$1 = xnor ]; then
	root=nor
	kernel=nor
fi

if [ x$ip = xdhcp ]; then
	bootargs="$bootargs ip=dhcp"
else
	bootargs="$bootargs ip=$eth0.ipaddr:$eth0.serverip:$eth0.gateway:$eth0.netmask:::"
fi

if [ x$root = xnand ]; then
	bootargs="$bootargs root=$rootpart_nand rootfstype=jffs2"
elif [ x$root = xnor ]; then
	bootargs="$bootargs root=$rootpart_nor rootfstype=jffs2"
else
	bootargs="$bootargs root=/dev/nfs nfsroot=$eth0.serverip:$nfsroot,v3,tcp"
fi

if [ $kernel = net ]; then
	if [ x$ip = xdhcp ]; then
		dhcp
	fi
	tftp $uimage uImage-333 || exit 1
	bootm uImage-333
elif [ $kernel = nor ]; then
	bootm /dev/nor0.kernel
else
	bootm /dev/nand0.kernel.bb
fi

